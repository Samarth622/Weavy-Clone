generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Workflow {
  id          String        @id @default(uuid())
  name        String
  nodes       Json
  edges       Json
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userId    String

  runs        WorkflowRun[]
}

model WorkflowRun {
  id          String        @id @default(uuid())
  workflowId  String
  workflow    Workflow      @relation(fields: [workflowId], references: [id])
  status      String
  createdAt   DateTime      @default(now())
  finishedAt  DateTime?
  nodeRuns    NodeRun[]
}

model NodeRun {
  id            String       @id @default(uuid())
  workflowRunId String
  workflowRun   WorkflowRun  @relation(fields: [workflowRunId], references: [id])
  nodeId        String
  status        String
  input         Json?
  output        Json?
  createdAt     DateTime     @default(now())
  finishedAt    DateTime?
}
